{
    "model": "src.training.dcc_tf",
    "model_params": {
        "label_len": 37,
        "L": 16,
        "enc_dim": 512,
        "num_enc_layers": 10,
        "dec_dim": 256,
        "num_dec_layers": 2,
        "dec_buf_len": 64,
        "dec_chunk_size": 32,
        "out_buf_len": 2
    },
    "train_data": {
        "input_dir": "my_dataset/mixmic",
        "dset": "train",
        "sr": 44100,
        "resample_rate": null
    },
    "val_data": {
        "input_dir": "my_dataset/mixmic_eval",
        "dset": "val",
        "sr": 44100,
        "resample_rate": null
    },
    "test_data": {
        "input_dir": "my_dataset/mixmic_test",
        "dset": "test",
        "sr": 44100,
        "resample_rate": null
    },
    "optim": {
        "lr": 0.0005,
        "weight_decay": 1e-05
    },
    "lr_sched": {
        "mode": "max",
        "factor": 0.5,
        "patience": 2,
        "min_lr": 5e-06,
        "threshold": 0.01,
        "threshold_mode": "abs"
    },
    "base_metric": "scale_invariant_signal_noise_ratio",
    "fix_lr_epochs": 3,
    "epochs": 100,
    "batch_size": 2,
    "eval_batch_size": 2,
    "n_workers": 2
}

